<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/containers_margin"
    android:background="@color/container_line_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/containers_margin">

    <TextView
        android:id="@+id/element_user_notification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Большое и длинное описание какого-то уведомления. Очень важного и с большим описанием."
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/element_user_notification_button_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Подтвердить"
            android:textColor="@color/button_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/element_user_notification_button_disagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/containers_margin"
            android:gravity="end"
            android:text="Отказ"
            android:textColor="@color/button_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/element_user_notification_button_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/containers_margin"
            android:gravity="end"
            android:text="Прочитано"
            android:textColor="@color/button_text_color"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>