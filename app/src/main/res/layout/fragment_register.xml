<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/containers_margin"
        android:layout_marginTop="@dimen/containers_margin"
        android:layout_marginEnd="@dimen/containers_margin"
        android:layout_marginBottom="@dimen/containers_margin"
        android:background="@drawable/container_round"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/containers_margin"
        android:paddingEnd="@dimen/containers_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:gravity="center"
            android:text="Регистрация"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fragment_login_login_edit_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:hint="Эл.Почта"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/fragment_login_login_edit_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:hint="Имя"
            android:inputType="textPassword"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/fragment_login_login_edit_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/fragment_login_login_edit_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:hint="Повторите пароль"
            android:inputType="textPassword"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/fragment_login_login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:gravity="center"
            android:text="Создать аккаунт"
            android:textColor="#0085FF"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>